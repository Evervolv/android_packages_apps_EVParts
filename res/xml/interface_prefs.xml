<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    	<PreferenceCategory
            	android:title="@string/interface_category_general_title"
		android:key="pref_category_general_interface">

		<CheckBoxPreference
			android:key="pref_use_screenon_anim"
			android:title="@string/title_use_screenon_anim"
			android:summaryOn="@string/summary_on_use_screenon_anim"
			android:summaryOff="@string/summary_off_use_screenon_anim" 
		/>

		<CheckBoxPreference
			android:key="pref_use_screenoff_anim"
			android:title="@string/title_use_screenoff_anim"
			android:summaryOn="@string/summary_on_use_screenoff_anim"
			android:summaryOff="@string/summary_off_use_screenoff_anim" 
		/>
		<CheckBoxPreference
			android:key="pref_trackball_wake"
			android:title="@string/title_use_trackball_wake"
			android:summaryOn="@string/summary_on_use_trackball_wake"
			android:summaryOff="@string/summary_off_use_trackball_wake" 
		/>

	</PreferenceCategory>
    	<PreferenceCategory
            	android:title="@string/interface_category_statusbar_title"
		android:key="pref_category_statusbar_interface">

		<ListPreference 
			android:key="pref_battery_style" 
			android:dialogTitle="@string/dialog_title_battery_style"
		    	android:title="@string/title_battery_style" 
			android:summary="@string/summary_battery_style"
		    	android:entries="@array/entries_batterystyles" 
			android:entryValues="@array/entryvalues_batterystyles" 
		/>
		<CheckBoxPreference
			   android:key="pref_hide_clock"
			   android:title="@string/title_hide_clock"
			   android:summaryOn="@string/summary_on_hide_clock"
			   android:summaryOff="@string/summary_off_hide_clock"
		/>
		<CheckBoxPreference
			   android:key="pref_hide_ampm"
			   android:title="@string/title_hide_ampm"
			   android:summaryOn="@string/summary_on_hide_ampm"
			   android:summaryOff="@string/summary_off_hide_ampm"
		/>
		<CheckBoxPreference
			android:key="pref_use_transparent_statusbar"
			android:title="@string/title_use_transparent_statusbar"
			android:summaryOn="@string/summary_on_use_transparent_statusbar"
			android:summaryOff="@string/summary_off_use_transparent_statusbar" 
		/>
	</PreferenceCategory>
    	<PreferenceCategory
            	android:title="@string/interface_category_statusbar_icons_title"
		android:key="pref_category_statusbar_icons_interface">

		<CheckBoxPreference
			   android:key="pref_hide_data_icon"
			   android:title="@string/title_hide_data_icon"
			   android:summaryOn="@string/summary_on_hide_data_icon"
			   android:summaryOff="@string/summary_off_hide_data_icon"
		/>
		<CheckBoxPreference
			   android:key="pref_hide_bluetooth_icon"
			   android:title="@string/title_hide_bluetooth_icon"
			   android:summaryOn="@string/summary_on_hide_bluetooth_icon"
			   android:summaryOff="@string/summary_off_hide_bluetooth_icon"
		/>
		<CheckBoxPreference
			   android:key="pref_hide_battery_icon"
			   android:title="@string/title_hide_battery_icon"
			   android:summaryOn="@string/summary_on_hide_battery_icon"
			   android:summaryOff="@string/summary_off_hide_battery_icon"
		/>
		<CheckBoxPreference
			   android:key="pref_hide_sync_icon"
			   android:title="@string/title_hide_sync_icon"
			   android:summaryOn="@string/summary_on_hide_sync_icon"
			   android:summaryOff="@string/summary_off_hide_sync_icon"
		/>
		<CheckBoxPreference
			   android:key="pref_hide_gps_icon"
			   android:title="@string/title_hide_gps_icon"
			   android:summaryOn="@string/summary_on_hide_gps_icon"
			   android:summaryOff="@string/summary_off_hide_gps_icon"
		/>
		<CheckBoxPreference
			   android:key="pref_hide_wifi_icon"
			   android:title="@string/title_hide_wifi_icon"
			   android:summaryOn="@string/summary_on_hide_wifi_icon"
			   android:summaryOff="@string/summary_off_hide_wifi_icon"
		/>
		<CheckBoxPreference
			   android:key="pref_hide_signal_icon"
			   android:title="@string/title_hide_signal_icon"
			   android:summaryOn="@string/summary_on_hide_signal_icon"
			   android:summaryOff="@string/summary_off_hide_signal_icon"
		/>
		<Preference android:key="pref_clear_icon_flags" 
		        android:title="@string/title_clear_flags_pref"
		        android:summary="@string/summary_clear_flags_pref"
		/>

	</PreferenceCategory>

</PreferenceScreen>

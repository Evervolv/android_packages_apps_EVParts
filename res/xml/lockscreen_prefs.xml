<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    	<PreferenceCategory
            	android:title="@string/title_lockscreen_category_general"
		android:key="pref_lockscreen_general_category"	
	>
		<EditTextPreference
			android:key="pref_carrier_caption"
			android:title="Lockscreen Carrier Caption"
			android:summary="Change the lockscreen carrier caption."
			android:dialogTitle="Enter lockscreen caption."
		/>

		<ListPreference 
			android:key="pref_lockscreen_style"
			android:dialogTitle="@string/dialog_title_lockscreen_style"
			android:title="@string/title_general_lockscreen_style"
			android:summary="@string/summary_lockscreen_style"
			android:entries="@array/lockscreen_styles_entries" 
			android:entryValues="@array/lockscreen_styles_values" 
		/>
		<CheckBoxPreference 
			android:key="pref_trackball_unlock"
			android:title="@string/title_trackball_unlock"
			android:summaryOn="@string/summary_on_trackball_unlock"
			android:summaryOff="@string/summary_off_trackball_unlock" 
		/>
	</PreferenceCategory>
</PreferenceScreen>

<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    	<PreferenceCategory
            	android:title="@string/title_lockscreen_category_general"
		android:key="pref_lockscreen_general_category"	
	>
		<EditTextPreference
			android:key="pref_carrier_caption"
			android:title="Lockscreen Carrier Caption"
			android:summary="Change the lockscreen carrier caption."
			android:dialogTitle="Enter lockscreen caption."
		/>

		<CheckBoxPreference
			android:key="pref_use_rotary_lockscreen"
			android:title="@string/title_general_use_rotary_lockscreen"
			android:summaryOn="@string/summary_on_use_rotary_lockscreen"
			android:summaryOff="@string/summary_off_use_rotary_lockscreen" 
		/>

		<CheckBoxPreference 
			android:key="pref_trackball_unlock"
			android:title="@string/title_trackball_unlock"
			android:summaryOn="@string/summary_on_trackball_unlock"
			android:summaryOff="@string/summary_off_trackball_unlock" 
		/>
	</PreferenceCategory>
</PreferenceScreen>

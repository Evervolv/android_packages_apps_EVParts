<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/custom_settings">

        <PreferenceScreen android:key="preferences_lockscreen"
                android:title="@string/preferences_lockscreen" 
                android:summary="@string/preferences_lockscreen_summary">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.evervolv.EVParts"
                    android:targetClass="com.evervolv.EVParts.Preferences.LockscreenPrefs" />
        </PreferenceScreen>

        <PreferenceScreen android:key="preferences_interface"
                android:title="@string/preferences_interface" 
                android:summary="@string/preferences_interface_summary">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.evervolv.EVParts"
                    android:targetClass="com.evervolv.EVParts.Preferences.InterfacePrefs" />
        </PreferenceScreen>

        <PreferenceScreen android:key="preferences_advanced"
                android:title="@string/preferences_advanced" 
                android:summary="@string/preferences_advanced_summary">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.evervolv.EVParts"
                    android:targetClass="com.evervolv.EVParts.Preferences.AdvancedPrefs" />
        </PreferenceScreen>

    </PreferenceCategory>
         
</PreferenceScreen>
